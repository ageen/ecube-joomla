<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>ecube</name>
	<creationDate>18 March 2017</creationDate>
	<author>Sayrven Hsian</author>
	<authorEmail>e@e-cube.tech</authorEmail>
	<authorUrl>https://ixf.io</authorUrl>
	<copyright>Copyright (C) 2005 - 2016 Open Source Matters, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.1.0</version>
	<description>TPL_ECUBE_XML_DESCRIPTION</description>

	<files>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>javascript</folder>
		<folder>language</folder>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>jsstrings.php</filename>
		<filename>favicon.ico</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
	</files>

	<positions>
		<position>debug</position>
		<position>topmenu</position>
		<position>position-0</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
		<position>position-11</position>
		<position>position-12</position>
		<position>position-13</position>
		<position>position-14</position>
	</positions>

	<!-- 	For core templates, we also install/uninstall the language files in the core language folders.
	-->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_ecube.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_ecube.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="wrapperSmall"  class="validate-numeric" type="text" default="53"
					label="TPL_ECUBE_FIELD_WRAPPERSMALL_LABEL"
					description="TPL_ECUBE_FIELD_WRAPPERSMALL_DESC"
					filter="integer" />

				<field name="wrapperLarge"  class="validate-numeric" type="text" default="72"
					label="TPL_ECUBE_FIELD_WRAPPERLARGE_LABEL"
					description="TPL_ECUBE_FIELD_WRAPPERLARGE_DESC"
					filter="integer" />

				<field name="logo" type="media"
					label="TPL_ECUBE_FIELD_LOGO_LABEL" description="TPL_ECUBE_FIELD_LOGO_DESC" />

				<field name="sitetitle"  type="text" default=""
					label="TPL_ECUBE_FIELD_SITETITLE_LABEL"
					description="TPL_ECUBE_FIELD_SITETITLE_DESC"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="TPL_ECUBE_FIELD_DESCRIPTION_LABEL"
					description="TPL_ECUBE_FIELD_DESCRIPTION_DESC"
					filter="string" />

				<field name="navposition" type="list" default="center"
					label="TPL_ECUBE_FIELD_NAVPOSITION_LABEL"
					description="TPL_ECUBE_FIELD_NAVPOSITION_DESC"
					filter="word"
				>
					<option value="center">TPL_ECUBE_OPTION_AFTER_CONTENT</option>
					<option value="left">TPL_ECUBE_OPTION_BEFORE_CONTENT</option>
				</field>

				<field name="bootstrap" type="textarea"
					label="TPL_ECUBE_FIELD_BOOTSTRAP_LABEL"
					description="TPL_ECUBE_FIELD_BOOTSTRAP_DESC"
					rows="4" columns="30"
				/>

				<field name="templatecolor" type="list" default="personal"
					label="TPL_ECUBE_FIELD_TEMPLATECOLOR_LABEL"
					description="TPL_ECUBE_FIELD_TEMPLATECOLOR_DESC"
					filter="word"
				>
					<option value="personal">TPL_ECUBE_OPTION_PERSONAL</option>
				</field>

				<field name="headerImage" type="media"
					label="TPL_ECUBE_FIELD_HEADER_IMAGE_LABEL" description="TPL_ECUBE_FIELD_HEADER_IMAGE_DESC" />

				<field name="backgroundcolor" type="color" default="#eee"
					label="TPL_ECUBE_FIELD_HEADER_BACKGROUND_COLOR_LABEL"
					description="TPL_ECUBE_FIELD_HEADER_BACKGROUND_COLOR_DESC" />

			</fieldset>
		</fields>
	</config>
</extension>
